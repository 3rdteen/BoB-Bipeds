<UserControl x:Class="ServoControl.ReferenceSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300" SizeChanged="UserControl_SizeChanged">
    <Grid>
        <Canvas Name="canvas" >
            <Rectangle Name="referenceBox" HorizontalAlignment="Left" Canvas.Left="0"   Canvas.Top="0" Width="50" Fill="Red" ></Rectangle>
        </Canvas>
        <Slider VerticalAlignment="Center" HorizontalAlignment="Stretch" ValueChanged="Slider_ValueChanged" Name="slider" SmallChange="1" LargeChange="1" ></Slider>

    </Grid>
</UserControl>
